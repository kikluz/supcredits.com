<h1>
  Customer Id
</h1>
<div>
  <% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>
    <div>
      <%= label_tag :password, 'Password:' %>
      <%= password_field_tag :password, params[:customer_id] %>
    </div>
    <div>
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
  <% end %>
</div>
