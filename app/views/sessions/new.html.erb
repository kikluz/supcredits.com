<div class="container-wrapper">

  <div class="container-narrow module">
    <h1>
      Login
    </h1>
    <div>
      <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
      <% end %>
      <%= form_tag sessions_path do %>
      <fieldset>
        <legend>Username</legend>
        <div>
          <%= password_field_tag :password %>
        </div>
        <div>
          <%= submit_tag "Login" %>
        </div>
      </fieldset>
      <% end %>
    </div>

  </div>
</div>

