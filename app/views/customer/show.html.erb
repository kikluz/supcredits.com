<div class="container-wrapper">
  <div class="container">

    <h1><%= @customer['given_name'] %> <%= @customer['family_name'] %></h1>
    <p>
      <h2><%= number_to_currency @count_credits %></h2>
    </p>

    <%= link_to "Done", customer_index_path, class: 'button' %>
    <%= link_to 'Add Credit', new_credit_path(customer_id: @customer['id']), class: 'btn'%>

    <div class="module">
      <h2>Credit Transaction History</h2>

      <%= render partial: 'credits/table', locals: { credits: @credits } %>
    </div>

  </div>
</div>
